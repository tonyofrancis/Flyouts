<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="spinner">
        <attr name="selectedTextSize" format="dimension"/>
        <attr name="selectedTextColor" format="color"/>
        <attr name="arrowColor" format="color"/>
        <attr name="menuBackgroundColor" format="color" />
        <attr name="menuTextColor" format="color" />
        <attr name="menuWidth" format="integer" />
        <attr name="menuArray" format="reference" />
        <attr name="selectedTextStyle" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
            <enum name="bold_italic" value="3" />
        </attr>
        <attr name="selectedTextAllCaps" format="boolean" />
        <attr name="animateArrow" format="boolean" />
    </declare-styleable>
</resources>